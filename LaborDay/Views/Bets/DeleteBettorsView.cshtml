@{
}
@model List<Bettor>
<link rel="stylesheet" href="~/css/mainview.css" />
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Bootstrap CSS -->
</head>
<h2>Labor Day</h2>
<table class="table">
	<thead>
		<tr>
			<th>
				Bettor ID
			</th>
			<th>
				Bettor Name
			</th>
			<th>
				Action
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<a asp-action="DeleteBettor" asp-route-id="@item.ID"> Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>